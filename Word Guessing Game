#include <iostream>
#include <cstdlib>
#include <ctime>

using namespace std;

int generateRandomNumber() {
    return rand() % 100 + 1;
}

int getPlayerGuess() {
    int guess;
    cout << "Enter your guess: ";
    cin >> guess;
    return guess;
}

void printHealthBar(int health) {
    cout << "Health: [";
    for (int i = 0; i < health; i++) cout << "#";
    for (int i = health; i < 10; i++) cout << "-";
    cout << "] (" << health * 10 << "%)\n";
}

void printAnswer(int guess, int randomNumber, int &health) {
    if (guess > randomNumber) {
        cout << "Too high! Try again.\n";
        health--;
    } else if (guess < randomNumber) {
        cout << "Too low! Try again.\n";
        health--;
    } else {
        cout << "Congratulations! You guessed it!\n";
    }
    printHealthBar(health);
}

int main() {
    srand(time(0));
    int randomNumber = generateRandomNumber();
    int number;
    int health = 10;

    cout << "Welcome to the Guessing Game!\n";
    printHealthBar(health);

    do {
        number = getPlayerGuess();
        printAnswer(number, randomNumber, health);
        if (health == 0) {
            cout << "Game Over! The correct number was: " << randomNumber << "\n";
            break;
        }
    } while (number != randomNumber);

    return 0;
}

